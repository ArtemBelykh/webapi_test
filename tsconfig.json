{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@webapi/app/*": ["src/app/*"],
      "@webapi/libs/*": ["src/libs/*"]
      // "@webapi/contracts": ["src/libs/contracts/index.ts"],
      // "@webapi/interface": ["src/libs/interfaces/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
